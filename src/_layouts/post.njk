---
layout: base.njk
section: post
---
<div class="page-container">
  <article>
    <h1>{{ title }}</h1>
    <p>
      <time datetime="{{ date | machineDate }}">{{ date | readableDate }}</time>
    </p>
    <hr/>

    {{ layoutContent | safe }}

    {% if tags %}
      <p class="tag-list">
      {% for tag in tags %}
        {%- if tag != "post" -%}
          {% set tagUrl %}/tags/{{ tag }}/{% endset %}
          <a class="tag" href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a>
        {%- endif -%}
      {% endfor %}
      </p>
    {% endif %}

  </article>
  <script type="text/javascript" src="https://www.juicer.io/embed/markus_daxu/embed-code.js" async defer></script>

  <nav>
    <a href="{{ '/blog/' | url }}">‚Üê View All Articles</a>
  </nav>
</div>